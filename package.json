{
  "name": "pug-htmx",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "yarn build:css && node ./bin/www",
    "dev": "yarn build:css:dev & nodemon ./bin/www",
    "build:css": "postcss public/stylesheets/tailwind.css -o public/stylesheets/style.css",
    "build:css:dev": "postcss public/stylesheets/tailwind.css -o public/stylesheets/style.css --watch",
    "format": "prettier . --write --plugin='@prettier/plugin-pug'"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^3.0.0",
    "@tailwindcss/typography": "^0.5.12",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.10.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3"
  }
}
